<div class="photo-index-wrapper">
  <div class="container">
    <!-- トップタイトル -->
    <h1 class="text-black text-center">天体写真一覧</h1>
    <!-- 新規投稿ページへのボタン -->
    <% if current_user && create_user? %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= link_to "投稿", new_photo_path, class: 'btn btn-black btn-block' %>
        </div>
      </div>
    <% end %>
    <!-- 写真一覧 -->
    <% @photos.each do |photo| %>
      <div class=""> <!-- <div class="row"> -->
        <div class="col-md-3">  <!-- <div class="col-md-6 col-md-offset-3"> -->
          <div class="photo-index-single">
            <!-- 画像詳細ページへのリンク -->
            <%= link_to photo_path(photo.id) do %>
              <!-- 画像 -->
              <%= image_tag photo.image.url %>
            <% end %>
            <!-- 各種アイコン -->
            <div class="photo-index-iconArea">
            <% if logged_in? %>
              <!-- ログイン中の表示 -->
              <!-- いいね　-->
              <% if photo.favorite_users.include?(current_user) %>
                <!-- いいね済のとき -->
                <%= link_to favorites_path(photo_id: photo.id, redirect_flg: 0), method: :delete do %>
                  <%= image_tag 'icons/heart.png', class: 'photo-favorited-icon' %>
                <% end %>
              <% else %>
                <!-- いいね未のとき -->
                <%= link_to favorites_path(photo_id: photo.id, redirect_flg: 0), method: :post do %>
                  <%= image_tag 'icons/heart.png', class: 'photo-index-icon' %>
                <% end %>
              <% end %>
              <!-- いいねカウント -->
              <%= photo.favorites.count %>
              <!-- コメントアイコン -->
              <%= link_to photo_path(photo.id) do %>
                <%= image_tag 'icons/comment.png', class: 'photo-index-icon' %>
              <% end %>
              <!-- コメントカウント -->
              <%= photo.photo_comments.count %>
            <% else %>
              <!-- ログオフ中の表示 -->
              <!-- いいねアイコン -->
              <%= image_tag 'icons/heart.png', class: 'photo-index-icon' %>
              <!-- いいねカウント -->
              <%= photo.favorites.count %>
              <!-- コメントアイコン -->
              <%= image_tag 'icons/comment.png', class: 'photo-index-icon' %>
              <!-- コメントカウント -->
              <%= photo.photo_comments.count %>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
