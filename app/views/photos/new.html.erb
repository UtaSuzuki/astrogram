<div class="new-wrapper">
  <div class="container">
    <div class="col-md-offset-3 col-md-6">
      <!-- トップタイトル -->
      <h1 class="text-center">
        写真投稿
      </h1>
      <%= form_for @photo do |f| %>
        <!-- タイトル入力 -->
        <div class="row form-group">
          <div class="col-md-4">
            <%= f.label :title, "タイトル (必須)" %>
          </div>
          <div class="col-md-4">
            <%= f.text_field :title %>
          </div>
        </div>
        <!-- 画像選択 -->
        <div class="row form-group">
          <div class="col-md-4">
            <%= f.label :image, "写真（必須）" %>
          </div>
          <div class="col-md-4">
            <%= f.file_field :image %>
          </div>
        </div>
        <!-- 撮影条件入力 -->
        <div class="row form-group">
          <div class="col-md-4">
            <%= f.label :condition_id, "撮影条件（必須）" %>
          </div>
          <div class="col-md-4">
            <%= f.select :condition_id, @condition %>
          </div>
        </div>
        <!-- 撮影日入力 -->
        <div class="row form-group">
          <div class="col-md-4">
            <%= f.label :date, "撮影日" %>
          </div>
          <div class="col-md-4">
            <%= f.date_select :date, {include_blank: true, start_year: 2020, use_month_numbers: true}, class: "datetime-box" %>
          </div>
        </div>
        <!-- 撮影時刻入力 -->
        <div class="row form-group">
          <div class="col-md-4">
            <%= f.label :time, "撮影時刻" %>
          </div>
          <div class="col-md-4">
            <%= f.time_select :time, {include_blank: true, minute_step: 5}, class: "datetime-box" %>
          </div>
        </div>
        <!-- 撮影地入力 -->
        <div class="row form-group">
          <div class="col-md-4">
            <%= f.label :location, "撮影地" %>
          </div>
          <div class="col-md-4">
            <%= f.text_field :location %>
          </div>
        </div>
        <!-- 詳細説明入力 -->
        <div class="row form-group">
          <div class="col-md-4">
            <%= f.label :description, "詳細（必須）" %>
          </div>
          <div class="col-md-4">
            <%= f.text_area :description %>
          </div>
        </div>
        <!-- 価格入力 -->
        <div class="row form-group">
          <div class="col-md-4">
            <%= f.label :price, "価格（必須）" %>
          </div>
          <div class="col-md-4">
            <%= f.text_field :price %>
          </div>
        </div>
        <!-- 投稿ボタン -->
        <div class="row form-group">
          <%= f.submit "投稿", class: 'btn btn-black btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
