<div class="users-new-wrapper">
  <div class="container">
    
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-black">Sign up</h1>
        <%= form_for @user do |f| %>
          <!-- 名前入力 -->
          <div class="form-group">
            <%= f.label :name, class: "text-black" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <!-- メールアドレス入力 -->
          <div class="form-group">
            <%= f.label :email, class: "text-black" %>
            <%= f.text_field :email, class: "form-control" %>
          </div>
          <!-- 新規パスワード入力 -->
          <div class="form-group">
            <%= f.label :password, class: "text-black" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <!-- パスワード確認入力 -->
          <div class="form-group">
            <%= f.label :password_confirmation, class: "text-black" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
          <!-- ユーザ種別選択 -->
          <div class="form-group">
            <%= f.label :kind, "User Type", class: "text-black" %>
            <!-- <div class="row col-md-6 btn-group" data-toggle="buttons"> -->
              <label class="btn btn-outline-secondary active" style="width:30%">
                <%= f.radio_button :kind, "normal", checked: true %>
                <%= f.label :kind, "Normal", {value: "nomal", style: "desplay: inline-block; color: #000;"} %>
              </label>
              <label class="btn btn-outline-secondary active" style="width:30%">
                <%= f.radio_button :kind, "creater" %>
                <%= f.label :kind, "Creater", {value: "creater", style: "desplay: inline-block; color: #000;"} %>
              </label>
            <!--</div> -->
          </div>
          <!-- 登録ボタン -->
          <%= f.submit "Create", class: "btn-block btn-black" %>
        <% end %>
      </div>
    </div>
    
  </div>
</div>