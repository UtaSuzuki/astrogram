<div class="event-index-wrapper">
  <div class="container">
    <% @events.each do |event| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="event-index-single">
            <h2 class="event-author">
              <%= event.user.name %>
            </h2>
            <%= image_tag event.image.url %>
            <%= image_tag 'icons/heart.png', class: 'event-index-icon' %>
            <%= image_tag 'icons/comment.png', class: 'event-index-icon' %>
            <p class="event-text">
              <%= event.description %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>