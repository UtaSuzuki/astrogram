<div class="event-user-index-wrapper">
  <div class="container">
    <!-- トップタイトル -->
    <h1 class="text-black text-center">投稿イベント</h1>
    <!-- 新規投稿ページへのボタン -->
    <% if current_user && create_user? %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= link_to "投稿", new_event_path, class: 'btn btn-black btn-block' %>
        </div>
      </div>
    <% end %>
    <!-- イベント一覧 -->
    <% @events.each do |event| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= link_to event_path(event.id) do %>
            <div class="event-user-index-single">
              <!-- タイトル -->
              <h2 class="event-title">
                <%= event.title %>
              </h2>
              <!-- 画像 -->
              <%= image_tag event.image.url %>
              <!-- いいね -->
              <%= image_tag 'icons/heart.png', class: 'event-index-icon' %>
              <!-- コメント -->
              <%= image_tag 'icons/comment.png', class: 'event-index-icon' %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
