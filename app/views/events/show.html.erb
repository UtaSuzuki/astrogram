<div class="event-show-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="event-show-single">
          <!-- 投稿者 -->
          <h3 class="event-author">
            <%= @author %>
          </h3>
          <!-- タイトル -->
          <h2>
            「<%= @event.title %>」
          </h2>
          <!-- 画像 -->
          <%= image_tag @event.image.url %>
          <!-- コメントアイコン -->
          <%= image_tag 'icons/comment.png', class: 'photo-index-icon' %>
          <!-- コメントカウント -->
          <%= @event.event_comments.count %>
          <!-- 詳細情報 -->
          <h3>イベント情報</h3>
          <table class="event-table">
            <tr>
              <td>開催日時</td>
              <td><%= @event.date.strftime('%Y/%m/%d') %></td>
              <% if @event.end_time.blank? then %>
                <td><%= @event.start_time.strftime('%H:%M') %> ～ </td>
              <% else %>
                <td><%= @event.start_time.strftime('%H:%M') %> ～ <%= @event.end_time.strftime('%H:%M') %></td>
              <% end %>
            </tr>
            <tr>
              <td>開催地</td>
              <td><%= @event.location %></td>
            </tr>
            <tr>
              <td>詳細</td>
              <td><%= @event.description %></td>
            </tr>
            <% if !@event.recruit_status then %>
              <tr>
                <td>参加締め切り</td>
                <td><%= @event.deadline %></td>
              </tr>
              <% if !@event.acceptNo.empty? then %>
                <tr>
                  <td>参加可能人数</td>
                  <td><%= @event.acceptNo %></td>
                </tr>
              <% end %>
            <% end %>
          </table>
          <!-- 参加登録 -->
          <p class="event-text">
            <% if @event.recruit_status then %>
              <% if logged_in? %>
                <% if @event.participant_users.include?(current_user) %>
                  <%= link_to "参加取消", participants_path(event_id: @event.id), method: :delete, class: "btn btn-block btn-black" %>
                <% else %>
                  <%= link_to "参加", participants_path(event_id: @event.id), method: :post, class: "btn btn-block btn-black" %>
                <% end %>
              <% end %>
            <% else %>
              参加受付が終了しています。
            <% end %>
          </p>
          <!-- コメント表示 -->
          <h3 class="comment-titile">
            コメント
          </h3>
          <% if @comments.exists?(event_id: @event.id) %>
            <div class="section-comment">
              <% @comments.each do |comment| %>
                <div class="comment-user">
                  <%= comment.user.name + ' >' %>
                </div>
                <div class="comment-content">
                  <%= comment.message %>
                </div>
              <% end %>
            </div>
          <% end %>
          <!-- コメント入力 -->
          <% if logged_in? %>
            <%= form_for [@event, @comment] do |f| %>
              <div class="form-group">
                <%= f.text_area :message, class: 'form-control' %>
              </div>
              <%= f.submit '送信', class: 'btn btn-black btn-block' %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
